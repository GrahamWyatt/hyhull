<div id="descriptive_metadata" class="tab-pane active">
  <%= render "shared/error_messages", :target => @structural_set %>
  <%= simple_form_for(@structural_set, :html => {:class => 'form-horizontal' }) do |f| %>
      <div class="row-spacer"></div>
    	<!-- <legend><h2>Edit Metadata</h2></legend> -->
    	<div class="fields">
        <%= f.input :title, :input_html => { :class => 'input-block-level' } %>
        <%= f.input :description, as: :text, :input_html => { :class => 'input-block-level', :rows => '14' } %> 
        <hr/>
        <%= render(:partial => "shared/set_select",  :locals => { resource: @structural_set, form: f }) %>
        <hr/>
        <%= render(:partial => "metadata/edit_administrative_metadata", :locals => { resource: @structural_set, form: f }) %> 
        <% # Only show the Add/edit content files when the initial metadata has been added and object created %>
        <hr/>
        <div class="page-gutter">
          <%= f.button :submit, "Save", :class => 'btn square-corners' %>
        </div>
      </div>    
  <% end %>
</div>