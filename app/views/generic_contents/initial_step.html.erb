<div class="container-fluid">
  <div class="page-gutter">
    <div class="row-fluid">
      <div class="span16">       
        <h2>New Generic content resource</h2>
      </div>
    </div>

  </div>
</div>

<div class="row-fluid">
  <div class="span16">
    <div class="page-gutter">
      <%#= link_to "&lt;&lt;Browse view".html_safe, sufia.generic_file_path %>
      <ul id="set-tree-nav" class="nav nav-tabs">
        <li class="active" id="edit_descriptive_metadata_link">
          <a href="#descriptive_metadata" data-toggle="tab">Resource genre selection</a>
        </li>
      </ul>
      <div class="tab-content">
        <div class="page-gutter">
          <div class="row-spacer"></div>
            <%= simple_form_for(@generic_content, url: { action: "new" },  :method => "get", :html => {:class => 'form-horizontal' }) do |f| %>
            <%= f.input :genre, collection: Genre.all.sort {|a,b| a.name <=> b.name }, value_method: "name" %>
            <%= select_by_property_type(f, :pid_namespace, "FEDORA-PID-NAMESPACE", true, false) if admin_user? %>
            <hr/>
            <%= f.submit "Next", :class => 'btn square-corners' %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>