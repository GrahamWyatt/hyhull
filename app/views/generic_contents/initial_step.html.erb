<div class="container-fluid">
  <div class="row-fluid">
    <div class="span10">
      <div class="row">
        <div class="span12">       
          <h2>New Generic content resource</h2>
          <p>Please select the resource genre from selection box below.</p>
        </div>
      </div>
      <div class="row">
          <div class="span12">
            <%= simple_form_for(@generic_content, url: { action: "new" },  :method => "get", :html => {:class => 'form-horizontal' }) do |f| %>
              <%= f.input :genre, collection: Genre.all.sort {|a,b| a.name <=> b.name }, value_method: "name" %>
              <%= f.submit "Next" %>
            <% end %>
          </div>
      </div>
    </div> 
    <div class="span2">
        <!--Sidebar content-->
    </div>
  </div>
</div>