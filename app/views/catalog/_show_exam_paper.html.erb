<%# default partial to display solr document fields in catalog show view -%>
<dl class="dl-horizontal dl-invert">
  <%= display_field(document, 'module_display_ssm', 'Module', 'module_display_ssm') %>
  <%= display_field(document, 'date_issued_ssm', 'Examination date', 'date_issued_ssm') %>
  <%= display_field(document, 'department_name_ssm', 'Department', 'department_name_ssm') %>
  <%= display_field(document, 'exam_level_ssm', 'Exam level level', 'exam_level_ssm') %>
  <% document_show_fields(document).each do |solr_fname, field| -%>
    <% # We filter the date out, because it is being displayed above %>
    <% unless field.label.downcase == "date" %>
	  <% if should_render_show_field? document, field %>
        <dt class="blacklight-<%= solr_fname.parameterize %>"><%= render_document_show_field_label document, :field => solr_fname %></dt>
	    <dd class="blacklight-<%= solr_fname.parameterize %>"><%= render_document_show_field_value document, :field => solr_fname %></dd>
	  <% end -%>
	<% end %>
  <% end -%>
  <%= display_field(document, 'additional_notes_ssm', 'Qualification name', 'additional_notes_ssm') %>
</dl>