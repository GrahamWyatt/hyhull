<div class="container-fluid">

  <div class="workflow-wrapper <%= resource_workflow_class(@journal_article) %>">

    <div class="wrapper-header">
      <div class="row-fluid">
        <div class="span16">
          <%= render partial: "shared/update_resource_state", locals: { object: @journal_article } %>
        </div>
      </div>
    </div>
  
      <div class="row-fluid">
        <div class="page-gutter">
          <div class="span16">          
            <h2>
              <small><%= @journal_article.title %>
                <span class="vertical-divider hidden-phone"></span>
                <span class="label label-alt">
                <%= show_resource_link(@journal_article.id) if @journal_article.persisted?  %></span>
              </small>
            </h2>
          </div>
        </div>
      </div>

      <%= render partial: "shared/resource_content_edit", locals: { resource: @journal_article } %>
      <%= render partial: "edit" %>

  </div>
</div>