   <!-- First  row -->
    <div class="row-fluid">
        <!-- Main hero unit for primary  action -->
        <div class="span12 offset2">
            <div id="" class="hero-tile tile-orange tile-shadow">

                <div class="row-spacer visible-desktop">
                &nbsp;
                </div>

                <h1>Welcome to Hull's digital repository, Hydra</h1>

                <p>
                The Hydra digital repository is an electronic archive for the University of Hull. It has been developed to hold, manage and preserve the growing amount of digital material generated by the research, education and administrative activities of the University.
                </p>
                <br/>
                <p>
                    Create a search by adding a search term into the search bar below...
                </p>

                <%= form_tag search_action_url, :method => :get, :class => 'form-inline form-search form-sub-search' do %>
                <div class="input-append"> 
                  <%= text_field_tag :q, params[:q], :class => "q input-xlarge search-query square-corners", :placeholder => 'Search the repository...' %>
                  <button class="btn square-corners" name="button" type="submit"><i class="icon-search icon hidden-phone"></i> Search</button>
                </div>
                <%= search_as_hidden_fields(:omit_keys => [:q, :search_field, :qt, :page]).html_safe %>
                <% end %>

            </div>
        </div>
    </div>

