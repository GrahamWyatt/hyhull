<div class="container-fluid">

      <div class="page-gutter">

        <div class="row-fluid">
          <div class="span16">       
            <h2>New Examination paper</h2>
            <p>Please select a Department name and Exam date from the selection boxes below</p>
          </div>
        </div>
        <div class="row-fluid">
            <div class="span16">
              <%= simple_form_for(@exam_paper, url: { action: "new" },  :method => "get", :html => {:class => 'form-horizontal' }) do |f| %>
                  <h3>Exam department</h3>
                  <%= f.input :department_name, collection: @exam_paper.department_names_list %>
                  <h3>Exam date</h3>
                  <div class="control-group">
                    <%= label_tag "month", "Month", class: "control-label" %>
                    <div class="controls">
                      <%= select_month(Date.today) %>
                    </div>              
                    <%= label_tag "year", "Year", class: "control-label"  %>
                    <div class="controls">
                      <%= select_year(Date.today.year-1, start_year:  Date.today.year, end_year: 2000 ) %>
                    </div>
                  </div>
                  <h3>Exam paper</h3>
                  <%= f.input :exam_level, collection: @exam_paper.examination_paper_levels %>

                  <%= f.submit "Next" %>
              <% end %>
            </div>
        </div>

      </div>

</div>

