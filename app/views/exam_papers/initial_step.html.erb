<div class="container-fluid">

      <div class="page-gutter">

        <div class="row-fluid">
          <div class="span16">       
            <h2>New Examination paper</h2>
            <p>Please select a Department name and Exam date from the selection boxes below</p>
          </div>
        </div>
        <div class="row-fluid">
            <div class="span16">
              <%= simple_form_for(@exam_paper, url: { action: "new" },  :method => "get", :html => {:class => 'form-horizontal' }) do |f| %>
                  <h3>Exam department</h3>
                  <%= select_by_property_type(f, :department_name, "EXAM-PAPER-DEPARTMENT") %>
                  <h3>Exam date</h3>
                  <div class="control-group">
                    <%= label_tag "month", "Month", class: "control-label" %>
                    <div class="controls">
                      <%#= select_month(1) %>
                      <%= select_tag 'date_month',
                        options_for_select([
                          ["January", "01"], ["February", "02"], ["March", "03"],
                          ["April", "04"], ["May", "05"], ["June", "06"], ["July", "07"],
                          ["August", "08"], ["September", "09"], ["October", "10"],
                          ["November", "11"], ["December", "12"], 
                          ["——————————————", "None"],
                          ["Semester 1", "S1"],
                          ["Semester 2", "S2"], ["Semester 3" , "S3"]
                        ]),
                        :name => "date[month]" 
                      %>
                    </div>              
                    <%= label_tag "year", "Year", class: "control-label"  %>
                    <div class="controls">
                      <%= select_year(Date.today.year, start_year:  Date.today.year, end_year: 2000 ) %>
                    </div>
                  </div>
                  <h3>Exam paper</h3>
                  <%= select_by_property_type(f, :exam_level, "EXAM-PAPER-LEVEL") %>
                  <%= f.submit "Next" %>
              <% end %>
            </div>
        </div>

      </div>

</div>

