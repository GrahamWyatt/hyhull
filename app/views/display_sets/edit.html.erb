<div class="container-fluid">
  <div class="row-fluid">
    <div class="page-gutter">
      <div class="span16">
        <span class="pull-left">
          <h2>
            <small>Display Set > <%= @display_set.title %>
            </small>
          </h2>
        </span>
        <span class="label label-alt pull-right" style="margin-top: 20px;" i>
          <%= link_to "View set", display_set_path(@display_set) if @display_set.persisted? %>
        </span>
      </div>
    </div>
  </div>
  <div class="row-fluid">
    <div class="page-gutter">
      <div class="span16">
        <%#= link_to "&lt;&lt;Browse view".html_safe, sufia.generic_file_path %>
        <ul id="metadata-edit-nav" class="nav nav-tabs">
          <li class="active" id="edit_descriptive_metadata_link">
            <a href="#descriptive_metadata" data-toggle="tab">Description</a>
          </li>
          <li id="edit_permissions_link">              
            <a href="#permissions_display" data-toggle="tab">Permissions</a>
          </li>
          <li id="view_additional_metadata_link">
            <a href="#additional_metadata" data-toggle="tab">Additional metadata</a>
          </li>
        </ul>
        <div class="tab-content">
          <%= render :partial => "edit" %>
          <%= render :partial => "permission", :locals => { :gf => @display_set} %>
          <div id="additional_metadata" class="tab-pane">            
            <%= render(:partial => "metadata/additional_metadata", :locals => { resource: @display_set }) %>
          </div>
        </div>
      </div> 
    </div>
  </div>
</div>